package it.tripagency_capstone_epicode.entity;

import java.time.LocalDate;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.OneToOne;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;


@Data
@NoArgsConstructor
@AllArgsConstructor
@Entity
public class Pacchetto {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id_pacchetto;
    
    @ManyToOne
    @JoinColumn(name = "id_user")
    private User user;

    @OneToOne
    @JoinColumn(name = "id_destinazione")
    private Destinazioni destinazione;

    private String alloggio;
    private boolean mezzaPensione;
    private boolean assicurazioneBase;
    private boolean attivitàDiGruppo;
    private boolean spostamentiDiGruppo;
    private double prezzoMinimo;
    private double prezzoMassimo;
    private int durataMinima;
    private int durataMassima;
    private LocalDate dataInizio;
    
    public Pacchetto( Destinazioni destinazione, String alloggio, boolean mezzaPensione, boolean assicurazioneBase, boolean attivitàDiGruppo, boolean spostamentiDiGruppo, double prezzoMinimo, double prezzoMassimo, int durataMinima, int durataMassima, LocalDate dataInizio) {
        this.destinazione = destinazione;
        this.alloggio = alloggio;
        this.mezzaPensione = mezzaPensione;
        this.assicurazioneBase = assicurazioneBase;
        this.attivitàDiGruppo = attivitàDiGruppo;
        this.spostamentiDiGruppo = spostamentiDiGruppo;
        this.prezzoMinimo = prezzoMinimo;
        this.prezzoMassimo = prezzoMassimo;
        this.durataMinima = durataMinima;
        this.durataMassima = durataMassima;
        this.dataInizio = dataInizio;
    }
    
 
}
